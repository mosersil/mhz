<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:ext="http://www.liquibase.org/xml/ns/dbchangelog-ext"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog-ext http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-ext.xsd http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.4.xsd">

    <changeSet id="01" author="silvio">
        <createTable tableName="CALENDAR_EVENT"
                     remarks="Calendar events">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true"/>
            </column>
            <column name="ADVERTISE" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="DATE" type="datetime">
                <constraints nullable="false"/>
            </column>
            <column name="DRESS_CODE" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="FULL_DAY" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="PUBLIC_EVENT" type="boolean">
                <constraints nullable="true"/>
            </column>
            <column name="REMARKS" type="varchar">
                <constraints nullable="true"/>
            </column>
            <column name="TITLE" type="varchar">
                <constraints nullable="true"/>
            </column>
        </createTable>



        <createTable tableName="USER">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>

            <column name="USERNAME" type="varchar">
                <constraints nullable="false" />
            </column>

            <column name="PASSWORD" type="varchar">
                <constraints nullable="false" />
            </column>

            <column name="CREATED_DATE" type="date">
                <constraints nullable="true" />
            </column>

            <column name="LAST_MODIFIED_DATE" type="date">
                <constraints nullable="true" />
            </column>

            <column name="PERSON_ID" type="long">
                <constraints nullable="false"/>
            </column>
        </createTable>


        <createTable tableName="ROLE">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="ROLE_TYPE" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <!--
            <column name="USER_ID" type="long">
                <constraints nullable="false" />
            </column>
            -->
        </createTable>

        <createTable tableName="USER_ROLE">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="USER_ID" type="long">
                <constraints nullable="false" />
            </column>
            <column name="ROLE_ID" type="long">
                <constraints nullable="false" />
            </column>
        </createTable>


        <createTable tableName="PERSON">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="FIRST_NAME" type="varchar(30)">
                <constraints nullable="false" />
            </column>
            <column name="LAST_NAME" type="varchar(30)">
                <constraints nullable="false" />
            </column>
            <column name="GENDER" type="int">
                <constraints nullable="false" />
            </column>
            <column name="ADDRESS_ID" type="int">
                <constraints nullable="true" />
            </column>
        </createTable>

        <createTable tableName="ORGANIZATION">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="NAME" type="varchar(30)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createTable tableName="MEMBERSHIP">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="PERSON_ID" type="long">
                <constraints nullable="false" />
            </column>
            <column name="ORGANIZATION_ID" type="long">
                <constraints nullable="false" />
            </column>
            <column name="JOIN_DATE" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="LEAVE_DATE" type="datetime">
                <constraints nullable="true" />
            </column>
        </createTable>

        <createTable tableName="ARTICLE">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="TITLE" type="varchar(60)">
                <constraints nullable="false" />
            </column>
            <column name="TEXT" type="varchar(5000)">
                <constraints nullable="false" />
            </column>
            <column name="START_DATE" type="datetime">
                <constraints nullable="false" />
            </column>
            <column name="END_DATE" type="datetime">
                <constraints nullable="false" />
            </column>
        </createTable>


        <createTable tableName="ADDRESS">
            <column name="ID" autoIncrement="true" type="long">
                <constraints nullable="false" unique="true" primaryKey="true" />
            </column>
            <column name="ADDRESS1" type="varchar(50)">
                <constraints nullable="false" />
            </column>
            <column name="ADDRESS2" type="varchar(50)">
                <constraints nullable="true" />
            </column>
            <column name="ZIP" type="varchar(10)">
                <constraints nullable="false" />
            </column>
            <column name="CITY" type="varchar(30)">
                <constraints nullable="false" />
            </column>
        </createTable>

        <createView viewName="VIEW_ADDRESSLIST">
            SELECT P.ID, P.GENDER, P.FIRST_NAME, P.LAST_NAME, CONCAT(A.ADDRESS1, CHAR(13), A.ADDRESS2) AS ADDRESS, A.ZIP, A.CITY, O.NAME AS ORGANIZATION
            FROM PERSON AS P
            INNER JOIN ADDRESS AS A ON A.ID=P.ADDRESS_ID
            INNER JOIN MEMBERSHIP AS M ON P.ID=M.PERSON_ID
            INNER JOIN ORGANIZATION AS O ON O.ID=M.ORGANIZATION_ID
            WHERE M.LEAVE_DATE IS NULL
            ORDER BY P.LAST_NAME;
        </createView>


